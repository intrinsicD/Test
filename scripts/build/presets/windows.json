{
  "version": 5,
  "configurePresets": [
    {
      "name": "windows-base",
      "hidden": true,
      "displayName": "Windows MSVC Base",
      "description": "Common cache entries for Windows builds using MSVC",
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "toolchainFile": "scripts/build/toolchains/windows-msvc.cmake",
      "cacheVariables": {
        "BUILD_SHARED_LIBS": "ON",
        "BUILD_TESTING": "ON",
        "ENGINE_ENABLE_PYTHON": "ON",
        "GLFW_BUILD_DOCS": "OFF",
        "GLFW_BUILD_EXAMPLES": "OFF",
        "GLFW_BUILD_TESTS": "OFF",
        "GLFW_BUILD_WAYLAND": "OFF",
        "GLFW_BUILD_WIN32": "ON",
        "GLFW_INSTALL": "OFF",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      },
      "environment": {
        "CC": "cl",
        "CXX": "cl"
      }
    },
    {
      "name": "windows-msvc-debug",
      "displayName": "Windows MSVC Debug",
      "inherits": [
        "windows-base"
      ],
      "cacheVariables": {
        "ENGINE_ENABLE_CUDA": "OFF",
        "ENGINE_ENABLE_COMPUTE_CUDA": "OFF"
      }
    },
    {
      "name": "windows-msvc-debug-cuda",
      "displayName": "Windows MSVC Debug (CUDA)",
      "inherits": [
        "windows-msvc-debug"
      ],
      "cacheVariables": {
        "ENGINE_ENABLE_CUDA": "ON",
        "ENGINE_ENABLE_COMPUTE_CUDA": "ON"
      }
    },
    {
      "name": "windows-msvc-release",
      "displayName": "Windows MSVC Release",
      "inherits": [
        "windows-base"
      ],
      "cacheVariables": {
        "ENGINE_ENABLE_CUDA": "OFF",
        "ENGINE_ENABLE_COMPUTE_CUDA": "OFF"
      }
    },
    {
      "name": "windows-msvc-release-cuda",
      "displayName": "Windows MSVC Release (CUDA)",
      "inherits": [
        "windows-msvc-release"
      ],
      "cacheVariables": {
        "ENGINE_ENABLE_CUDA": "ON",
        "ENGINE_ENABLE_COMPUTE_CUDA": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "windows-msvc-debug",
      "displayName": "Build (Windows MSVC Debug)",
      "configurePreset": "windows-msvc-debug",
      "configuration": "Debug"
    },
    {
      "name": "windows-msvc-debug-cuda",
      "displayName": "Build (Windows MSVC Debug CUDA)",
      "configurePreset": "windows-msvc-debug-cuda",
      "configuration": "Debug"
    },
    {
      "name": "windows-msvc-release",
      "displayName": "Build (Windows MSVC Release)",
      "configurePreset": "windows-msvc-release",
      "configuration": "Release"
    },
    {
      "name": "windows-msvc-release-cuda",
      "displayName": "Build (Windows MSVC Release CUDA)",
      "configurePreset": "windows-msvc-release-cuda",
      "configuration": "Release"
    }
  ],
  "testPresets": [
    {
      "name": "windows-msvc-debug",
      "displayName": "CTest (Windows MSVC Debug)",
      "configurePreset": "windows-msvc-debug",
      "configuration": "Debug",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "windows-msvc-debug-cuda",
      "displayName": "CTest (Windows MSVC Debug CUDA)",
      "configurePreset": "windows-msvc-debug-cuda",
      "configuration": "Debug",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "windows-msvc-release",
      "displayName": "CTest (Windows MSVC Release)",
      "configurePreset": "windows-msvc-release",
      "configuration": "Release",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "windows-msvc-release-cuda",
      "displayName": "CTest (Windows MSVC Release CUDA)",
      "configurePreset": "windows-msvc-release-cuda",
      "configuration": "Release",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
