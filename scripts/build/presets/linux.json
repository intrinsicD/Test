{
  "version": 5,
  "configurePresets": [
    {
      "name": "linux-base",
      "hidden": true,
      "displayName": "Linux GCC Base",
      "description": "Common cache entries for Linux builds using GCC",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "toolchainFile": "scripts/build/toolchains/linux-gcc.cmake",
      "cacheVariables": {
        "BUILD_SHARED_LIBS": "ON",
        "BUILD_TESTING": "ON",
        "ENGINE_ENABLE_PYTHON": "ON",
        "GLFW_BUILD_DOCS": "OFF",
        "GLFW_BUILD_EXAMPLES": "OFF",
        "GLFW_BUILD_TESTS": "OFF",
        "GLFW_BUILD_WAYLAND": "OFF",
        "GLFW_BUILD_X11": "ON",
        "GLFW_INSTALL": "OFF",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      },
      "environment": {
        "CC": "gcc",
        "CXX": "g++"
      }
    },
    {
      "name": "linux-gcc-debug",
      "displayName": "Linux GCC Debug",
      "inherits": [
        "linux-base"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "linux-gcc-release",
      "displayName": "Linux GCC Release",
      "inherits": [
        "linux-base"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_INTERPROCEDURAL_OPTIMIZATION": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "linux-gcc-debug",
      "displayName": "Build (Linux GCC Debug)",
      "configurePreset": "linux-gcc-debug"
    },
    {
      "name": "linux-gcc-release",
      "displayName": "Build (Linux GCC Release)",
      "configurePreset": "linux-gcc-release"
    }
  ],
  "testPresets": [
    {
      "name": "linux-gcc-debug",
      "displayName": "CTest (Linux GCC Debug)",
      "configurePreset": "linux-gcc-debug",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "linux-gcc-release",
      "displayName": "CTest (Linux GCC Release)",
      "configurePreset": "linux-gcc-release",
      "configuration": "Release",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
